<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateNoteFragment"
    android:background="@color/bg_primary_dark">


    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_back_24"
        android:layout_margin="10dp"/>

    <ImageButton
        android:id="@+id/button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_done_24"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/blue_line"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:fontFamily="@font/gardens_cm_regular"
                android:background="@drawable/bg_text"
                android:textSize="30sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_marginHorizontal="20dp"
                android:inputType="textCapSentences"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/blue_line"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sub_title"
                android:fontFamily="@font/gardens_cm_regular"
                android:background="@drawable/bg_text"
                android:textSize="26sp"
                android:textStyle="bold|italic"
                android:maxLines="2"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView_curr_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="16sp"
            android:fontFamily="@font/gardens_cm_regular"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/blue_line"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_note_text"
                android:fontFamily="@font/gardens_cm_regular"
                android:background="@drawable/bg_text"
                android:textSize="22sp"
                android:layout_marginHorizontal="20dp"
                android:lines="10"
                android:gravity="left|top"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>